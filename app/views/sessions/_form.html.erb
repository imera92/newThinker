<section class="container-fluid">
  <div class="row">
    <div class = "col-md-12">
      <h1 id="teacher_new">Log in</h1>
    </div>
  </div>
  <%= form_for(:session, url: login_path) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= f.label :email %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= f.label :password %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      Eres nuevo? <%= link_to "Registrate ya!", signup_path %>
    </div>
  </div>
  <% end %>
</section>